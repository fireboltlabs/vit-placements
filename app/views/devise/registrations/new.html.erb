<div class="border-form-div">
<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div>
    <%= f.text_field :first_name, autofocus: true, :placeholder => 'First Name'%></div><br>

    <div>
    <%= f.text_field :last_name, autofocus: true, :placeholder => 'Last Name'%></div><br>

  <div>
  <%= f.email_field :email, autofocus: true, :placeholder => 'Email Address' %></div><br>

  <div> <% if @validatable %><i>(<%= @minimum_password_length %> Characters Minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off",:placeholder => 'Password' %></div><br>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation'%></div><br>

  <div><%= f.submit "Sign up", :class => "btn btn-primary"%></div>
<% end %>
<br>

<%= render "devise/shared/links" %>
</div>
